<div class="page-header">
  <h1>
    Line items
    <a href="/line_items/new" class="btn btn-lg btn-success">New Line item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Menuitem</th>
        <th>Actions</th>
      </tr>

      <% @line_items.each do |line_item| %>
      <tr>
        <td>
          <% if line_item.restaurant.present? %>
            <a href="/restaurants/<%= line_item.restaurant.id %>">
              <%= line_item.restaurant.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if line_item.menuitem.present? %>
            <a href="/menu_items/<%= line_item.menuitem.id %>">
              <%= line_item.menuitem.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/line_items/<%= line_item.id %>" class="btn btn-primary">Show</a>
          <a href="/line_items/<%= line_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_line_item/<%= line_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @line_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
